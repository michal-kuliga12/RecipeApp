@model RecipeResponse
@{
	ViewBag.Title = "CookBook - Recipe details";
}

<div class="container-md mt-4">
	<div class="row">

		<div class="col-md-5 d-flex flex-column justify-content-center border-bottom">
			<div>
				<h1>@Model.Name</h1>
				<h2><strong>By @Model.Author</strong></h2>
			</div>
		</div>

		<div class="col-md-7 text-center">
			<img src="@Model.ImageUrl" class="img-fluid" />
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-md-5 ">
			<div>
				<p><span class="fw-bold">Czas przygotowania:</span>@Model.PreparationTime minut</p>
				<p><span class="fw-bold">Ocena:</span>@Model.Rating</p>
			</div>
			<div>
				<h3>Lista składników</h3>
				<div>
					@if(Model.RecipeIngredients != null)
					{
						@foreach (RecipeIngredient ingredient in Model.RecipeIngredients)
						{
							<input type="checkbox" value="ingredient.Name" />
						}
					}
				</div>
			</div>
		</div>


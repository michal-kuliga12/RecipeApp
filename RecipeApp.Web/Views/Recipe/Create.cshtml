@model RecipeAddRequest
@{
	ViewBag.Title = "CookBook - Add Recipe";
}

<h2 class="mb-4">Dodaj nowy przepis</h2>

<div class="container">
    <form asp-controller="Recipe" asp-action="Create" method="post" class="needs-validation">

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<RecipeApp.Domain.Enums.Category>()" class="form-select">
                <option value="">-- wybierz kategorię --</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PreparationTime" class="form-label"></label>
                <input asp-for="PreparationTime" class="form-control" type="number" min="0" />
                <span asp-validation-for="PreparationTime" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Servings" class="form-label"></label>
                <input asp-for="Servings" class="form-control" type="number" min="1" max="20" />
                <span asp-validation-for="Servings" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" type="url" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CreatedAt" class="form-label"></label>
            <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>

        <hr />

        <h4>Składniki</h4>
        <div id="ingredients-list">
            <!-- Dynamicznie dodawane pola -->
        </div>

        <button type="button" id="add-ingredient" class="btn btn-outline-primary mb-3">
            Dodaj składnik
        </button>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
        </div>
    </form>
</div>